{{#get "posts" id="66c20c2c23d97673f68bc8e8" include="tags,authors" as |post|}}
    {{#post}}
    <article class="post-content {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
        <header class="post-content-header">
            <h1 class="post-content-title">About</h1>
        </header>
        <div class="post-content-body">
            {{content}}
        </div>
    </article>
    {{/post}}
{{/get}}
